{{#each hits}}
<article class="card four columns">
    <div class="card__image" style="background-image: url({{img}});">

    </div>
    <h2 class="card__header">{{title}}</h2>
    <dl class="card__stats clearfix">
    <div class="card__stat">
        <dt><i class="fa fa-heart" aria-hidden="true"></i>Yield</dt>
        <dd>{{yield}}</dd>
    </div>
    <div class="card__stat">
        <dt><i class="fa fa-clock-o" aria-hidden="true"></i>Time</dt>
        <dd>{{ttime}}</dd>
    </div>
    <div class="card__stat">
        <dt>Ingredients</dt>
        <dd>{{ingredients.lengths}}</dd>
    </div>
    </dl>
    <a href="{{url}}" class="card__link" target="_blank">on {{blog}}</a>
</article>
{{/each}}